{
  "metadata": [
    {
      "src": [
        {
          "cwd":  "../",
          "files": [
            "src/**.cs"
          ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "articles/**/*.md", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "defcore",
      "_enableSearch": true,
	  "_appFooter" : "Copyright © 2017 Adam Fowles",
	  "_appLogoPath" : ""
    },
    "dest": "_site"
  }
}